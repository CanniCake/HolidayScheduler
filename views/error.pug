doctype
html
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		title Error
		link(rel='stylesheet' href='/css/bootstrap.css')
		script(type='application/javascript' src='/js/bootstrap.js')
		style.
			html, body {
				height: 100%;
			}
			body {
				display: -ms-flexbox;
				display: flex;
				-ms-flex-align: center;
				align-items: center;
				padding-top: 40px;
				padding-bottom: 40px;
				background-color: #f5f5f5;
			}
			.message {
				width: 100%;
				max-width: 800px;
				padding: 15px;
				margin: auto;
			}
	body
		.message
			.alert.alert-danger
				h4.alert-heading= message
			button.btn.btn-secondary.btn-lg.back Go back
		script(type='application/javascript').
			document.querySelectorAll('.back').forEach(function (elem) {
				return elem.addEventListener('click', function (e) {
					return history.back();
				});
			});
